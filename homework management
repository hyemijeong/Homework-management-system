package homework;

import java.util.Scanner;

public class Homework {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int num=5;
		while (num!=6) {
		    System.out.println("***Hyemi's Homework Management System***");
		    System.out.println("1. Add homework");
		    System.out.println("2. Delete homework");
		    System.out.println("3. Edit homework");
		    System.out.println("4. View homework");
		    System.out.println("5. Show a menu");
		    System.out.println("6. Exit");
		    System.out.println("Select one number 1-6:");
		    num = input.nextInt();
		    if(num==1){
		    	addHomework();
		    }
		    else if(num==2){
		    	deleteHomework();	
		    }
		    else if(num==3){
		    	editHomework();	
		    }
		    else if(num==4){
		    	viewHomework();	
		    }
		    else {
		    	continue;
		    }
		}
     }
		
		public static void addHomework() {
			Scanner input = new Scanner(System.in);
			System.out.println("Subject :");
			String Subject=input.nextLine();
			System.out.println("Deadline :");
			String Deadline=input.nextLine();
			System.out.println("Content :");
			String Content=input.nextLine();
		}
		public static void deleteHomework() {
			Scanner input = new Scanner(System.in);
			System.out.println("Subject :");
			String Subject=input.nextLine();
		}
		public static void editHomework() {
			Scanner input = new Scanner(System.in);
			System.out.println("Subject :");
			String Subject=input.nextLine();
		}
		public static void viewHomework() {
			Scanner input = new Scanner(System.in);
			System.out.println("Subject :");
			String Subject=input.nextLine();
		}
			
}
